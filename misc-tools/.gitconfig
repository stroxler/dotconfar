[user]
  name = Steven Troxler
  email = steven.troxler@gmail.com
[color]
  ui = auto
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
[alias]
    # log graph
    lg = log --graph --abbrev-commit --decorate --date=relative\
 --format=format:'%C(bold blue)%h%C(reset) - %C(bold\
 green)(%ar)%C(reset) %C(blue)%s%C(reset) -\
 %an%C(reset)%C(bold blue)%d%C(reset)' --all
[mergetool]
	prompt = false
[merge]
    tool = kdiff3
[mergetool "kdiff3"]
    trustExitCode = false
[diff]
    guitool = kdiff3
[difftool "kdiff3"]
    trustExitCode = false
