#!/usr/bin/env bash
set -e

EMACS_VARIANT=doomacs


mkdir -p "${HOME}/.editor_logs"
LOGFILE="${HOME}/.editor_logs/{EMACS_VARIANT}.log"

export EMACSDIR="${HOME}/doom-emacs"

if [ "$1" == '--gui' ]; then
  shift 1
  nohup emacs "$@" </dev/null >"${LOGFILE}" 2>&1 &
else
  export TERM=xterm-direct
  emacs "$@" >"${LOGFILE}" 2>&1
fi
